<body class="hold-transition customLoginRegPage">
    <div class="loginColLeft">
        @* <img src="~/images/login_img1.png" alt="login_img1.png" class="loginImg1" /> *@
        <img src="~/images/logo-pravas.png" alt="logo-pravas.png" class="loginImg1" />
    </div>
    <div id="divLoginMsg" class="loginColRight login-box box">
        <!-- /.login-box -->
        <div class="card">
            <div class="card-body login-card-body">
                <div class="login-logo">
                    <img src="~/images/logo.png" alt="Logo" class="login-logo-cust" />
                </div>
                @*<p class="login-box-msg">Sign in to start your session</p>*@
                <h2 class="title">LOGIN</h2>
                <div id="errorMsg"></div>
                <form action="/Users/Login" id="frmLogin" method="post">
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" data-val="true" data-val-required="The Email field is required." id="txtUserName" name="txtUserName" placeholder="Email Address">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group">
                        <input class="form-control" data-val="true" data-val-required="The Password field is required." id="txtPassword" name="txtPassword" maxlength="30" placeholder="Password" type="password" onkeydown="CallEnter(event, 'btnSubmit')">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 mb-3" style="text-align: right;">
                            <a style="color: #666666; font-size: 14px; padding: 5px 0px; cursor: pointer;" onclick="showFP('FPLink')">Forgot Password</a>
                        </div>
                        <div class="col-12">
                            <button type="button" onclick="SubmitLogin()" class="btn btn-primary btn-block btn-loginReg" onkeydown="CallEnter(event, 'btnSubmit')" id="btnSubmit" name="btnSubmit" value="login">Login</button>
                        </div>
                        
                        <br />
                        <br />
                        <br />
                        <div class="col-md-12" style="float:right; text-align: right; padding-top: 100px;">
                            <a type="button" style="text-decoration: underline;" href="~/DeleteUser/Delete">Delete Account</a>
                        </div>

                        <!-- /.col -->
                    </div>
                </form>
            </div>
        </div>
        <!-- /.login-box -->
        <div class="clearfix"></div>
    </div>

    <!-- jQuery -->
    <script src="~/js/jquery-2.1.3.js" type="text/javascript"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Dialogs //Custom JS BS3 to BS4 -->
    <script src="~/plugins/bs4/bootstrap-dialog.min.js"></script>
    <script src="~/plugins/bs4/bootstrap-dialog-custom-bs4.js"></script>
    <!-- Validate -->
    <script src="~/js/jquery.validate.js" type="text/javascript"></script>
    <script src="~/js/jquery.validate.unobtrusive.js" type="text/javascript"></script>
    <!-- overlayScrollbars -->
    <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/plugins/AdminLTE/js/AdminLTE.min.js"></script>



    <!-- Global Strings - Content -->
    <script src="~/js/global.js"></script>
    <!-- Common functions -->
    <script src="~/js/common.js"></script>
    <!-- Login -->
    <script src="~/js/login.js"></script>




    <script id="scriptLoader" type="application/htmlMessage">
        <div class="overlay"></div>
        <div class="loading-img"></div>
    </script>
    <script id="scriptLoaderSmall" type="application/htmlMessage">
        <div class="overlay"></div>
        <div class="loading-img-small"></div>
    </script>
    <script id="scriptAlert" type="application/htmlMessage">
        <div class="alert alert-[[CLASS]] alert-dismissable" style="margin-left: 0px;">
            <!--<i class="fa fa-[[ICON]]"></i>-->
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
            [[MESSAGE]]
        </div>
    </script>
</body>
