@using Core.Entity.Enums;
@using Yatra.Resources;
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />

    <!-- Tell the browser to be responsive to screen width -->
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta name="author" content="Pravas">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>

    <!-- Facebook -->
    <meta property="og:url" content="http://pravas.logthis.in/">
    <meta property="og:type" content="website">
    <meta property="og:title" content="Pravas">
    <meta property="og:description" content="Pravas">
    <meta property="og:image" content="http://pravas.logthis.in/images/sharing-with-facebook.jpg">
    <meta property="og:image:width" content="600">
    <meta property="og:image:height" content="315">

    <!-- Linkedin -->
    <meta property="og:image" content="http://pravas.logthis.in/images/sharing-with-linkedin.jpg">
    <meta property="og:image:width" content="180">
    <meta property="og:image:height" content="110">

    <!-- Twitter -->
    <meta name="twitter:image" content="http://pravas.logthis.in/images/sharing-with-twitter.jpg">

    <!-- Write Custom Page Meta Data Here... -->
    <meta name="title" content="Pravas">
    <meta name="description" content="Pravas">
    <meta name="keywords" content="Pravas">
    <title>@ViewData["Title"] - Pravas</title>

    <link rel="shortcut icon" href="~/images/favicon.ico">
    <!-- Font Awesome -->
    <link href="~/plugins/fontawesome-free/css/all.min.css" rel="stylesheet">        
    <!-- Custom style -->    
    <script>
        var custDateTimeCSS = new Date().getTime();
        document.write("<link href=\"/css/landing-page.css?v=" + custDateTimeCSS + "\" rel='stylesheet' type='text/css' />");
    </script>

    <!-- jQuery -->
    <script src="~/Scripts/jquery-2.1.3.js" type="text/javascript"></script>
    
    <script>
        $(document).ready(function () {
            $(".iconBottomTop").click(function () {
                $("html, body").animate({ scrollTop: 0 }, 500);
            });
        });
    </script>

</head>
<body>
    <div class="lpage-cust-container">
        <header>            
            <div class="lpage-cust-container-inner">
                <div class="lpage-cust-container-inner-p20">
                    <div class="lpage-header-lp">                        
                        <a href="https://www.toondemy.com/play-and-learn" target="_blank" rel="noopener"><img src="~/images/logo.png" alt="image" class="lpage-logo" /></a>
                    </div>
                    <div class="lpage-header-rp">
                        @*<a href="/Home/Index" class="lpage-btn-downloadnow lpage-btn-home" target="_self"><i class="fa fa-home"></i> Home</a>
                        <span class="lpage-nav-sep">|</span>*@                        
                        <a href="~/Users/Login" class="lpage-btn-downloadnow" target="_self">Login</a>
                        <div class="clear"></div>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </header>

        <div class="clear"></div>

        <div class="lpage-body">
            @RenderBody()
            <div class="clear"></div>
        </div>

        <div class="clear"></div>
        
        <!-- Footer Start -->
        <section class="lpage-cust-copyright-sec">
            <div class="iconBottomTop" style="display: none"><img src="~/images/arrow-bottom-to-top.png" alt="" class="img" /></div>
            <div class="lpage-footer-padding">
                <div class="lpage-footer-lp">
                    <p class="copyRText">V1.0.0, Copyright &copy; GoPhygital 2024.</p>
                </div>
                @*<div class="lpage-footer-rp">
                    <p class="copyRText"><a href="~/Home/PrivacyPolicy" class="link" target="_self">Privacy Policy</a> <span class="footersep">|</span> Powered by <a href="https://www.gophygital.io/" target="_blank" class="links" rel="noopener">GoPhygital</a></p>
                </div>*@
                <div class="clear"></div>
            </div>

            <div class="clear"></div>

        </section>
        <!-- Footer END -->
        <div class="clear"></div>
    </div>

   
</body>
</html>
